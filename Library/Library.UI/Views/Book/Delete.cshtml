@model Library.UI.Models.Books.DeleteBookViewModel

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <form asp-controller="Books" asp-action="Delete" method="post" enctype="multipart/form-data" class="mt-3">

            <h1 class="mt-3">Delete Book</h1>
            <input asp-for="Id" type="hidden" class="form-control" />

            <p>Do you really want to delete this item?</p>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Yes</button>
                <a asp-controller="Front" asp-action="Books" class="btn btn-secondary">No</a>
            </div>

        </form>

    </div>
    <div class="col-md-4"></div>
</div>
