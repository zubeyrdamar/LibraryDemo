@model Library.UI.Models.Auth.RegisterViewModel

@{}

<h1 class="mt-3">Register</h1>

<form method="post" class="mt-3">

    <div class="mt-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" type="text" class="form-control" />
    </div>

    <div class="mt-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="mt-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="mt-3">
        <label asp-for="RePassword" class="form-label">Password Confirmation</label>
        <input asp-for="RePassword" type="password" class="form-control" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>

</form>