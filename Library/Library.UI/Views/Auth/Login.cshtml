@model Library.UI.Models.Auth.LoginViewModel

@{
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        @if(ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.Message</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-controller="Auth" asp-action="Login" method="post" class="mt-3">

            <h1 class="mt-3">Login</h1>

            <div class="mt-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" type="text" class="form-control" />
            </div>

            <div class="mt-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

        </form>

        <div class="mt-3">
            <a asp-controller="Front" asp-action="Register">Did you not register yet?</a>
        </div>

    </div>
    <div class="col-md-4"></div>
</div>
